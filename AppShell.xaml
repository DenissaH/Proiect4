<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proiect4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proiect4"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent 
            Title="Despre Catalog" 
            ContentTemplate="{DataTemplate local:AboutPage}" 
            />
        <ShellContent 
            Title="Elevi" 
            ContentTemplate="{DataTemplate local:ListEleviPage}" 
        />
        <ShellContent 
            Title="Pofesori" 
            ContentTemplate="{DataTemplate local:ListProfiPage}" 
        />
        <ShellContent 
            Title="Materii" 
            ContentTemplate="{DataTemplate local:ListMateriiPage}" 
        />
    </TabBar>
</Shell>
